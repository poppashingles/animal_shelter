<form method="post" action="/animals/<%= @animal.id %>">
  <label for="name-field">Name:</label>
  <input type="text" name="name" id="name-field"value="<%= @animal.name %>"/>

  <label for="type-field">Type:</label>
  <input type="text" name="type" id="type-field" value="<%= @animal.type %>"/>

  <label for="adoptable-selection">Available for adoption:</label>
  <select name="adoptable" id="adoptable-selection">
    <option value="Yes" <%= "selected" if @animal.adoptable == "t" %>>Yes</option>
    <option value="No" <%= "selected" if @animal.adoptable == "f" %>>No</option>
  </select>

  <label for="admission-date-field">Admission date:</label>
  <input type="date" name="admission_date" id="admission-date-field" value="<%= @animal.admission_date() %>"/>

  <label for="photo-url-field">Photo link:</label>
  <input type="text" name="photo_url" id="photo-url-field" value="<%= @animal.photo_url %>"/>

  <label for="owner-field">Owner:</label>
  <select name="owner_id" id="owner-field">
    <% @owners.each do |owner| %>
      <option value="<%= owner.id %>" <%= "selected" if @animal.owner_id == owner.id %>><%= owner.first_name %> <%= owner.last_name %></option>
    <% end %>
  </select>

  <input type='submit' value="Edit animal">
</form>
