<div class= "container">
  <p>Name: <%= @animal.name %></p>
  <p>Type: <%= @animal.type %></p>
  <p>Adoptable:
    <% if @animal.adoptable == "t" %>
      <%= "Yes" %>
    <% else %>
      <%= "No" %>
    <% end %>
  </p>
  <p>Admission date: <%= @animal.admission_date %></p>
  <img src = "<%= @animal.photo_url %>"/>
  <% if session[:name] == "administrator" %>
    <p><a href="/animals/<%= @animal.id %>/edit">Edit all details</a></p>
    <!-- Button to toggle adoptable -->
    <!-- <form action="" method="post">
      <input type='submit' value="Adoptable?">
    </form> -->
    <form action="/animals/<%= @animal.id %>/delete" method="post">
      <input type='submit' value="Remove animal from the database">
    </form>
  <% end %>
</div>
