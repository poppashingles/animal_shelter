<div class= "container">
    <p>First name: <%= @owner.first_name %></p>
    <p>Last name: <%= @owner.last_name %></p>
    <p>Address: <%= @owner.address %></p>
    <p>Email: <%= @owner.email %></p>
    <img src = "<%= @owner.photo_url %>"/>
    <% if session[:name] == "administrator" %>
      <form action="/owners/<%= @owner.id %>/edit" method="get">
        <input id ="edit-button" type='submit' value="Edit owner's details">
      </form>
      <form action="/owners/<%= @owner.id %>/delete" method="post">
        <input id ="delete-button" type='submit' value="Remove owner from the database">
      </form>
    <% end %>
</div>

<% @animals.each do |animal| %>
  <div class= "container">
    <p>Name: <%= animal.name %></p>
    <p>Type: <%= animal.type %></p>
    <p>Adoptable:
      <% if animal.adoptable == "t" %>
        <%= "Yes" %>
      <% else %>
        <%= "No" %>
      <% end %>
    </p>
    <p>Admission date: <%= animal.admission_date %></p>
    <p><a href="/animals/<%= animal.id %>"><img src = "<%= animal.photo_url %>"/></a></p>
</div>
<% end %>
